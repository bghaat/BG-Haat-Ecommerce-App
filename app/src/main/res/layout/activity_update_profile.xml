<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_update"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Update Profile"/>

    <EditText
        android:id="@+id/et_update_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_update"
        android:background="@drawable/search_background"
        android:layout_margin="16dp"
        android:hint="Enter Name"
        android:paddingStart="20dp"

        />

    <EditText
        android:id="@+id/et_update_phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/et_update_name"
        app:layout_constraintTop_toBottomOf="@id/et_update_name"
        app:layout_constraintStart_toStartOf="@id/et_update_name"
        android:background="@drawable/search_background"
        android:hint="Enter Phone"
        android:paddingStart="20dp"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/et_update_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_update_phone"
        app:layout_constraintStart_toStartOf="@id/et_update_phone"
        app:layout_constraintEnd_toEndOf="@id/et_update_phone"
        android:layout_marginTop="16dp"
        android:background="@drawable/search_background"
        android:hint="Email"
        android:paddingStart="20dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/et_update_address"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_update_email"
        app:layout_constraintStart_toStartOf="@id/et_update_email"
        app:layout_constraintEnd_toEndOf="@id/et_update_email"
        android:background="@drawable/search_background"
        android:layout_marginTop="16dp"
        android:hint="Enter Address"
        android:paddingStart="20dp"
        />

    <Button
        android:id="@+id/btn_update_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="update profile"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/et_update_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>