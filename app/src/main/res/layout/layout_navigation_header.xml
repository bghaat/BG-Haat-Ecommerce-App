<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_iv_nav_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_user"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/tv_user_header_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01834462681"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profile_iv_nav_header"
        app:layout_constraintStart_toStartOf="@id/profile_iv_nav_header"
        app:layout_constraintEnd_toEndOf="@id/profile_iv_nav_header"
        android:layout_marginTop="16dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>