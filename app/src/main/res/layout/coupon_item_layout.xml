<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/iv_discount"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/promo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/tv_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Coupon Title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_discount"
        app:layout_constraintTop_toTopOf="@id/iv_discount" />

    <TextView
        android:id="@+id/tv_coupon_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coupon Code : "
        app:layout_constraintTop_toBottomOf="@id/tv_coupon_title"
        app:layout_constraintStart_toStartOf="@id/tv_coupon_title"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_coupon_code_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BG123456"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        app:layout_constraintStart_toEndOf="@id/tv_coupon_code"
        app:layout_constraintTop_toTopOf="@id/tv_coupon_code"/>


    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount : "
        app:layout_constraintTop_toBottomOf="@id/tv_coupon_code"
        app:layout_constraintStart_toStartOf="@id/tv_coupon_code"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 tk"
        app:layout_constraintStart_toEndOf="@id/tv_amount"
        app:layout_constraintTop_toTopOf="@id/tv_amount"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_expired_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expired Date : "
        app:layout_constraintTop_toBottomOf="@+id/tv_amount"
        app:layout_constraintStart_toStartOf="@+id/tv_amount"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/11/2021"
        app:layout_constraintStart_toEndOf="@+id/tv_expired_date"
        app:layout_constraintTop_toTopOf="@id/tv_expired_date"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:background="@color/black"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>